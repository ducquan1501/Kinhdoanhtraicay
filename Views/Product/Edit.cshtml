@{
    Layout = null; // Không sử dụng layout chung
}
@model Kinhdoanhtraicay.Models.Product
<style>
    .edit-form {
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

        .btn-primary:hover, .btn-secondary:hover {
            background-color: #0056b3;
        }
</style>
@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "edit-form" }))
{
    @Html.HiddenFor(m => m.ProductId)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StockQuantity)
        @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Image)
        <input type="file" id="imageUpload" name="ImageUpload" accept="image/*" class="form-control-img" />
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Trở về</a>
    </div>
}
